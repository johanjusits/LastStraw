<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#000000" />
            <gradient  android:angle="-90"  android:startColor="#ff2f8813" android:endColor="#ff49df1c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#000000" />
            <solid  android:color="#ff49df1c"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#000000" />
            <solid  android:color="#ffb9b6b3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="2dip" android:color="#000000" />
            <gradient  android:angle="-90"  android:startColor="#ff3183e3" android:endColor="#ff0d14e3" />
        </shape>
    </item>
</selector>