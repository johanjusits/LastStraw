<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="2dip" android:color="#000000" />
            <gradient  android:angle="-90"  android:startColor="#ffac9d03" android:endColor="#ffd6c404"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="2dip" android:color="#000000" />
            <solid  android:color="#ffe0d800"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="2dip" android:color="#000000" />
            <solid  android:color="#ffb9b6b3"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="2dip" android:color="#000000" />
            <gradient  android:angle="-90"  android:startColor="#ffac9d03" android:endColor="#ffe0de05" />
        </shape>
    </item>
</selector>