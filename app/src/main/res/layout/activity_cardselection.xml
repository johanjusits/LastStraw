<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_menus">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvLevelName"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textBlack"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TabHost
            android:id="@+id/tabhost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cardSelectTitle"
                    android:id="@+id/tvCardsTitle"
                    android:textColor="@color/textBlack"
                    android:textSize="24sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Available Slots:"
                        android:id="@+id/tvACardsTitle"
                        android:textColor="@color/textBlack"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tvSlots"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cardsinhand"
                        android:id="@+id/tvCardsInHTitle"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textBlack"
                        android:textStyle="italic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/tvCardsInHNr"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/textBlack"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TabWidget>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="256dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/fieldList" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="256dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ailmentList" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="256dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ListView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/boostingList" />

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/viewCards"
            android:id="@+id/bViewCards"
            android:textColor="@color/textBlack"
            style="@style/startscreen_button" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/startGame"
            android:id="@+id/bStartGame"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textBlack"
            style="@style/startscreen_button"
            android:layout_marginLeft="16dp" />

    </LinearLayout>

</LinearLayout>