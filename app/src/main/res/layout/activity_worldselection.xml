<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_menus"
    android:gravity="center_vertical">

    <LinearLayout
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <!-- World: Tool Shed
            Object: Nails
            Enemies: Mechanics -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world_fields"
                android:id="@+id/tvWorld001"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <ImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:id="@+id/imgBtnWorld001"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/world_fields"
                android:scaleType="centerCrop"
                style="@style/lvlSelectionButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscore"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscoreNr"
                android:id="@+id/world001High"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <!-- World: Fields
            Object: Wheat
            Enemies: Farmers -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dungeon"
                android:id="@+id/tvWorld002"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/textBlack" />

            <ImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:id="@+id/imgBtnWorld002"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_button"
                android:src="@drawable/world_dungeon"
                android:scaleType="center"
                android:clickable="false"
                style="@style/lvlSelectionButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscore"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscoreNr"
                android:id="@+id/world002High"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <!-- World: Theme Park
            Object: Balloons
            Enemies: Clowns -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mountains"
                android:id="@+id/tvWorld003"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <ImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:id="@+id/imgBtnWorld003"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_button"
                android:src="@drawable/world_mountians"
                android:scaleType="center"
                android:clickable="false"
                style="@style/lvlSelectionButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscore"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscoreNr"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <!-- World: Cathedral
            Object: Candles
            Enemies: Cultists -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wreckage"
                android:id="@+id/tvWorld004"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/textBlack" />

            <ImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:id="@+id/imgBtnWorld004"
                android:src="@drawable/world_wreckage"
                android:scaleType="center"
                android:background="@drawable/gray_button"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                style="@style/lvlSelectionButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscore"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscoreNr"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <!-- World: Jungle
            Object: Spears
            Enemies: Savages -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Woods"
                android:id="@+id/tvWorld005"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/textBlack" />

            <ImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:id="@+id/imgBtnWorld005"
                android:src="@drawable/world_woods"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gray_button"
                android:clickable="false"
                style="@style/lvlSelectionButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscore"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscoreNr"
                android:id="@+id/textView11"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <!-- World: Back Street
            Object: Street Lights
            Enemies: Ruffians -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trainyard"
                android:id="@+id/tvWorld006"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/textBlack" />

            <ImageButton
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:id="@+id/imgBtnWorld006"
                android:background="@drawable/gray_button"
                android:scaleType="center"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                style="@style/lvlSelectionButton"
                android:src="@drawable/world_trainyard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscore"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highscoreNr"
                android:id="@+id/textView12"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/textBlack" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>