<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_menus">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="256dp"
            android:layout_height="96dp"
            android:text="@string/goBack"
            android:id="@+id/bGoBack"
            android:textColor="@color/textBlack"
            style="@style/startscreen_button"
            android:textSize="36sp" />

        <Button
            android:layout_width="256dp"
            android:layout_height="96dp"
            android:text="@string/emptyHand"
            android:id="@+id/bEmptyHand"
            style="@style/startscreen_button"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textBlack"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cardsInHand"
            android:id="@+id/tvRemoveCardName"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/textBlack"
            android:textSize="48sp"
            android:padding="16dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/handList"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>